  institution = {Departments of Radiology, Cincinnati Children's Hospital Medical
	Center and University of Cincinnati College of Medicine, Cincinnati,
	OH 45229, USA.},
  keywords = {Anisotropy; Brain; Brain Injuries; Child; Child, Preschool; Diffusion
	Magnetic Resonance Imaging; Female; Glasgow Coma Scale; Humans; Image
	Processing, Computer-Assisted; Male},
